<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.love.myapplication.Main4Activity">

    <LinearLayout
        android:layout_width="432dp"
        android:layout_height="674dp"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/d"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/ia"
                android:clickable="true"
                android:onClick="mainClick"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/ib" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.03"
                android:background="@drawable/ic" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="451dp"
            android:layout_height="393dp"
            app:srcCompat="@drawable/ie"
            android:layout_weight="0.55" />

        <ImageView
            android:id="@+id/imageView30"
            android:layout_width="448dp"
            android:layout_height="163dp"
            app:srcCompat="@drawable/ik"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="429dp"
            android:layout_weight="0.39" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:weightSum="1">

            <ImageView
                android:id="@+id/imageView31"
                android:layout_width="79dp"
                android:layout_height="40dp"
                android:layout_marginLeft="35dp"
                app:srcCompat="@drawable/ig"
                android:layout_weight="0.02" />

            <ImageView
                android:id="@+id/imageView38"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="40dp"
                app:srcCompat="@drawable/ij" />

            <ImageView
                android:id="@+id/imageView39"
                android:layout_width="66dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="35dp"
                app:srcCompat="@drawable/ih"
                android:layout_weight="0.04" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
